# Server Configuration
PORT=3000
NODE_ENV=production
HOST=0.0.0.0

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-session-secret-key-change-this

# CORS
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# MongoDB (إذا كنت تستخدم MongoDB)
MONGODB_URI=mongodb://localhost:27017/mouse-stream
MONGODB_TEST_URI=mongodb://localhost:27017/mouse-stream-test

# Admin Credentials
ADMIN_EMAIL=admin@mousestream.com
ADMIN_PASSWORD=admin123

# API Keys (إذا كنت تستخدم خدمات خارجية)
HLS_PROXY_URL=https://your-proxy-service.com
ANALYTICS_API_KEY=your-analytics-key
